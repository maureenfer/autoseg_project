<div id="notice" class="alert alert-info hide"></div>
<div class="row">
  <div class="col-md-10">
    <%= link_to 'New List', new_list_path, class: 'btn btn-default', remote: :true %>
  </div>
</div>
<br>

<div class="panel panel-default">
  <div class="panel-heading">Lists</div>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Status</th>
          <th>Favorite</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @lists.each do |list| %>
          <% if (list.user_id == current_user.id) || (list.status == false) %>
            <tr>
              <td><%= list.name %></td>
              <td><%= (list.status) ? 'Private' : 'Public' %></td>
              <td>
                <%= link_to  "/add-favorite/#{list.id}", id: 'add-fav', remote: true do %> 
                  <span class="glyphicon glyphicon-star-empty"></span>
                <% end %>
              </td>
              <td><%= list.user.email %></td>
              <td>
                <%= link_to list do %>
                  <span class="glyphicon glyphicon-eye-open"></span>
                <% end %>
              </td>
              <% if list.user_id == current_user.id %>
                <td>
                  <%= link_to edit_list_path(list), remote: :true do %>
                    <span class="glyphicon glyphicon-edit"></span>
                  <% end%>
                </td>
                <td><%= link_to  list, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <span class="glyphicon glyphicon-remove-circle"></span>
                  <% end%>
                </td>
              <% end %>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
