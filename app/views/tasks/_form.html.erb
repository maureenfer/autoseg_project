<%= form_for(@task, html: {class:'form-horizontal task_form'}, remote: true) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h4>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-md-11">
    <div class="form-group">
      <label class="col-xs-3 control-label">List</label>
      <div class="col-xs-5">
        <%= select_tag "task[list_id][]", options_from_collection_for_select(List.where(user_id: current_user.id), "id", "name", @task.list_id), include_blank: true %>
      </div>
      <% if action_name == 'new' %>
        <div class="col-xs-4">
            <button type="button" id="addButton" class="btn btn-default addButton"><i class="glyphicon glyphicon-plus"></i></button>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <label class="col-xs-3 control-label">Name</label>
      <div class="col-xs-5">
        <%= text_field_tag 'task[name][]', @task.name , class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group last">
      <label class="col-xs-3 control-label">Description</label>
      <div class="col-xs-5">
        <%= text_area_tag 'task[description][]', @task.description, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-10">
        <%= f.submit "Create", class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>
<% end %>

<div class="append hide" id="add-fields">
  <hr>
  <div class="form-group">
    <label class="col-xs-3 control-label">List</label>
    <div class="col-xs-5">
      <%= select_tag "task[list_id][]", options_from_collection_for_select(List.where(user_id: current_user.id), "id", "name"), include_blank: true %>
    </div>
      <div class="col-xs-4">
        <button type="button" class="btn btn-default removeButton"><i class="glyphicon glyphicon-minus"></i></button>
      </div>
  </div>

  <div class="form-group">
    <label class="col-xs-3 control-label">Name</label>
    <div class="col-xs-5">
      <%= text_field_tag 'task[name][]', nil , class: 'form-control'  %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-xs-3 control-label">Description</label>
    <div class="col-xs-5">
      <%= text_area_tag 'task[description][]', nil, class: 'form-control' %>
    </div>
  </div>
      
</div>

<script type="text/javascript">
  <%= render template: 'tasks/task_utils.js' %>
</script>
